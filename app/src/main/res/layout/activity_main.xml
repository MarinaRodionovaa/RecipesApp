<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/background_color"
        android:orientation="horizontal"
        android:paddingStart="@dimen/btn_padding_horizontal"
        android:paddingTop="@dimen/btn_padding_vertical"
        android:paddingEnd="@dimen/btn_padding_horizontal"
        android:paddingBottom="@dimen/btn_padding_vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            style="@style/StyleNavButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/btn_margin_between"
            android:layout_weight="1"
            android:backgroundTint="@color/button_category_color"
            android:paddingTop="@dimen/btn_category_padding_vertical"
            android:paddingBottom="@dimen/btn_category_padding_vertical"
            android:text="@string/btn_category" />

        <Button
            style="@style/StyleNavButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/btn_favorite_padding_vertical"
            android:paddingBottom="@dimen/btn_favorite_padding_vertical"
            android:text="@string/btn_favorite"
            app:backgroundTint="@color/button_favorite_color"
            app:icon="@drawable/ic_heart_empty"
            app:iconGravity="textEnd"
            app:iconSize="24dp"
            tools:text="Избранное" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>